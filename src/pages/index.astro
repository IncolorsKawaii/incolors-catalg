---
import SeccionProductos from '../../components/SeccionProductos.astro';
import Layout from '../../layouts/Layout.astro';
import { obtenerProductos } from '../../utils/productos';

const { destacados, nuevos, aleatorios } = await obtenerProductos();
---

<Layout>
  <h1 style="font-size: 2rem; text-align: center; color: #ec407a;">🌈 Bienvenida a tu Tienda Kawaii 🌈</h1>

  <SeccionProductos titulo="✨ Productos Destacados ✨" productos={destacados.map(p => p.data)} />
  <SeccionProductos titulo="🆕 Nuevos Ingresos 🆕" productos={nuevos.map(p => p.data)} />
  <SeccionProductos titulo="🎁 Descubre algo nuevo 🎁" productos={aleatorios.map(p => p.data)} />
</Layout>

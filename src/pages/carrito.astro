---
import { useState, useEffect } from 'astro/jsx-runtime';
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>ğŸ›’ Tu Pedido Kawaii</title>
  <style>
    body {
      font-family: 'Comic Sans MS', cursive, sans-serif;
      background: #fff0f6;
      color: #c2185b;
      padding: 2rem;
      max-width: 720px;
      margin: auto;
    }
    h1 {
      text-align: center;
      margin-bottom: 1rem;
    }
    .cart-item {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
      background: #ffe4f1;
      padding: 1rem;
      border-radius: 12px;
      align-items: center;
    }
    .item-info {
      flex-grow: 1;
    }
    .item-title {
      font-weight: bold;
      font-size: 1.1rem;
      margin-bottom: 0.25rem;
    }
    .item-price {
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
    }
    .quantity-input {
      width: 60px;
      border-radius: 8px;
      border: 1px solid #c2185b;
      padding: 0.25rem 0.5rem;
      text-align: center;
      font-weight: bold;
      color: #c2185b;
      background: #fff0f6;
    }
    button.remove-btn {
      background: #ff80ab;
      border: none;
      border-radius: 50%;
      width: 32px;
      height: 32px;
      font-size: 1.2rem;
      cursor: pointer;
      color: white;
      font-weight: bold;
    }
    .total {
      text-align: right;
      font-weight: bold;
      font-size: 1.3rem;
      margin: 1.5rem 0;
      color: #c2185b;
    }
    form {
      background: #ffd6e8;
      padding: 1.5rem;
      border-radius: 12px;
    }
    label {
      display: block;
      font-weight: bold;
      margin-bottom: 0.25rem;
      margin-top: 1rem;
    }
    input, textarea {
      width: 100%;
      padding: 0.5rem;
      border-radius: 8px;
      border: 1px solid #c2185b;
      background: #fff0f6;
      color: #c2185b;
      font-weight: bold;
      font-size: 1rem;
      font-family: inherit;
    }
    button.send-btn {
      margin-top: 1.5rem;
      width: 100%;
      padding: 0.75rem;
      font-size: 1.2rem;
      font-weight: bold;
      border: none;
      border-radius: 24px;
      background: linear-gradient(135deg, #ff80ab, #ff4081);
      color: white;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    button.send-btn:hover {
      background: linear-gradient(135deg, #ff4081, #ff80ab);
    }
    p.empty-msg {
      text-align: center;
      font-size: 1.2rem;
      margin: 2rem 0;
      color: #c2185b;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <h1>ğŸ›’ Tu Pedido Kawaii</h1>

  <div id="cart-container"></div>
  <div class="total" id="cart-total">Total: $0</div>

  <form id="order-form">
    <label for="name">ğŸ‘¤ Nombre de quien recibe</label>
    <input type="text" id="name" required />

    <label for="id">ğŸªª CÃ©dula</label>
    <input type="text" id="id" required />

    <label for="address">ğŸ  DirecciÃ³n</label>
    <input type="text" id="address" required />

    <label for="extra">ğŸ“¦ Datos adicionales (casa / apto / torre / piso)</label>
    <input type="text" id="extra" />

    <label for="neighborhood">ğŸ¡ Barrio</label>
    <input type="text" id="neighborhood" required />

    <label for="city">ğŸŒ† Ciudad y Departamento</label>
    <input type="text" id="city" required />

    <label for="phone">ğŸ“± Celular</label>
    <input type="tel" id="phone" required pattern="^\+?\d{7,15}$" />

    <button type="submit" class="send-btn">ğŸ“² Enviar Pedido por WhatsApp</button>
  </form>

  <p class="empty-msg" id="empty-msg" style="display:none;">Tu carrito estÃ¡ vacÃ­o ğŸ˜¿</p>

  <script>
    const cartContainer = document.getElementById('cart-container');
    const cartTotalEl = document.getElementById('cart-total');
    const emptyMsg = document.getElementById('empty-msg');
    const form = document.getElementById('order-form');
    let cart = JSON.parse(localStorage.getItem('cart') || '[]');

    function renderCart() {
      cartContainer.innerHTML = '';
      if (cart.length === 0) {
        cartTotalEl.style.display = 'none';
        form.style.display = 'none';
        emptyMsg.style.display = 'block';
        return;
      }
      emptyMsg.style.display = 'none';
      cartTotalEl.style.display = 'block';
      form.style.display = 'block';

      let total = 0;
      cart.forEach((item, index) => {
        total += item.price * item.quantity;
        const div = document.createElement('div');
        div.className = 'cart-item';
        div.innerHTML = `
          <img src="${item.image}" alt="${item.title}" style="width:80px; height:80px; object-fit:cover; border-radius:12px;" />
          <div class="item-info">
            <div class="item-title">${item.title}</div>
            <div class="item-price">Precio unitario: $${item.price.toLocaleString('es-CO')}</div>
            <label>
              Cantidad: 
              <input type="number" min="1" value="${item.quantity}" class="quantity-input" data-index="${index}" />
            </label>
          </div>
          <button class="remove-btn" data-index="${index}">ğŸ—‘ï¸</button>
        `;
        cartContainer.appendChild(div);
      });

      cartTotalEl.textContent = `Total: $${total.toLocaleString('es-CO')}`;
    }

    cartContainer.addEventListener('input', e => {
      if (e.target.classList.contains('quantity-input')) {
        const idx = e.target.dataset.index;
        let newQty = parseInt(e.target.value);
        if (isNaN(newQty) || newQty < 1) {
          newQty = 1;
          e.target.value = 1;
        }
        cart[idx].quantity = newQty;
        localStorage.setItem('cart', JSON.stringify(cart));
        renderCart();
      }
    });

    cartContainer.addEventListener('click', e => {
      if (e.target.classList.contains('remove-btn')) {
        const idx = e.target.dataset.index;
        cart.splice(idx, 1);
        localStorage.setItem('cart', JSON.stringify(cart));
        renderCart();
      }
    });

    form.addEventListener('submit', e => {
      e.preventDefault();
      if (cart.length === 0) {
        alert('Tu carrito estÃ¡ vacÃ­o ğŸ˜¿');
        return;
      }

      const name = form.name.value.trim();
      const id = form.id.value.trim();
      const address = form.address.value.trim();
      const extra = form.extra.value.trim();
      const neighborhood = form.neighborhood.value.trim();
      const city = form.city.value.trim();
      const phone = form.phone.value.trim();

      if (!name || !id || !address || !neighborhood || !city || !phone) {
        alert('Por favor llena todos los campos obligatorios ğŸ¥º');
        return;
      }

      let message = `âœ¨ *Nuevo Pedido Kawaii* âœ¨%0A%0A`;
      message += `*Nombre:* ${encodeURIComponent(name)}%0A`;
      message += `*CÃ©dula:* ${encodeURIComponent(id)}%0A`;
      message += `*DirecciÃ³n:* ${encodeURIComponent(address)}%0A`;
      if (extra) message += `*Datos adicionales:* ${encodeURIComponent(extra)}%0A`;
      message += `*Barrio:* ${encodeURIComponent(neighborhood)}%0A`;
      message += `*Ciudad y Departamento:* ${encodeURIComponent(city)}%0A`;
      message += `*Celular:* ${encodeURIComponent(phone)}%0A%0A`;
      message += `*Detalles del pedido:*%0A`;

      let total = 0;
      cart.forEach(item => {
        message += `- ${encodeURIComponent(item.title)} x${item.quantity} = $${(item.price * item.quantity).toLocaleString('es-CO')}%0A`;
        total += item.price * item.quantity;
      });

      message += `%0A*Total:* $${total.toLocaleString('es-CO')}%0A%0AGracias por tu compra kawaii! ğŸ’–`;

      const whatsappNumber = '573103723198';
      const url = `https://wa.me/${whatsappNumber}?text=${message}`;
      window.open(url, '_blank');
    });

    renderCart();
  </script>
</body>
</html>

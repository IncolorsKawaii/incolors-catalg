---
import CartSidebar from '../components/CartSidebar.astro';
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Mi sitio kawaii</title>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet" />
    <style>
      body {
        font-family: 'Fredoka One', cursive;
        margin: 0;
        padding: 0;
        background: #fff0f6;
      }

      main {
        padding: 2rem;
        max-width: 900px;
        margin: 0 auto;
      }

      /* BotÃ³n flotante del carrito */
      #cart-button {
        position: fixed;
        bottom: 1.5rem;
        right: 1.5rem;
        background: #ff80ab;
        border-radius: 50%;
        width: 56px;
        height: 56px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 28px;
        color: white;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(255, 64, 129, 0.5);
        z-index: 10000;
        transition: background 0.3s ease;
      }

      #cart-button:hover {
        background: #ff4081;
      }
    </style>
  </head>
  <body>
    <!-- Sidebar del carrito -->
    <CartSidebar />

    <!-- BotÃ³n flotante para abrir el carrito -->
    <div
      id="cart-button"
      aria-label="Abrir carrito"
      role="button"
      tabindex="0"
      aria-haspopup="dialog"
      aria-controls="cart-sidebar"
      aria-expanded="false"
    >
      ðŸ›’
    </div>

    <!-- Contenido principal -->
    <main>
      <slot />
    </main>

    <!-- Script para funcionalidad del carrito -->
    <script type="module" src="/scripts/cart.js"></script>
  </body>
</html>
